<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D9E2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:text="Первое число:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/first_number_edit_text"
        android:layout_width="150dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/first_number_label"
        android:hint=""
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/second_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_number_label"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:text="Второе число:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/second_number_edit_text"
        android:layout_width="150dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_number_edit_text"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/second_number_label"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_number_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Сложить" />

</RelativeLayout>
